<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- アクションのパッケージ定義 -->
    <package name="action" extends="struts-default">
        <action name="login" class="action.LoginAction" method="execute">
            <result name="input">login.jsp</result>
            <result name="success">menu.jsp</result>
        </action>

        <action name="toSearch" class="action.MenuAction" method="toSearch">
        	<result name="success">productInfo.jsp</result>
    	</action>

    	<action name="toRegister" class="action.MenuAction" method="toRegister">
        	<result name="success">register.jsp</result>
    	</action>

    	<action name="toLogin" class="action.MenuAction" method="toLogin">
        	<result name="success">login.jsp</result>
    	</action>

       	<action name="toMenu" class="action.MenuAction" method="toMenu">
        	<result name="success">menu.jsp</result>
    	</action>

   		<action name="register" class="action.ProductAction" method="register">
        	<result name="success">register.jsp</result>
 	   </action>

  		<action name="search" class="action.ProductAction" method="search">
        	<result name="success">productInfo.jsp</result>
 	   </action>

  		<action name="update" class="action.ProductAction" method="update">
        	<result name="success">productInfo.jsp</result>
 	   </action>

	</package>
</struts>